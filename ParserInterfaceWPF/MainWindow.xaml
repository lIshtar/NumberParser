<Window x:Class="ParserInterfaceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParserInterfaceWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Width="300">

            <TextBox x:Name="NumberTextBlock"
                       TextWrapping="Wrap" 
                       Text="" 
                       VerticalAlignment="Top"/>

            <Button x:Name="NumberConfirmButton"
                    Content="обработать" 
                    VerticalAlignment="Top"
                    Click="NumberConfirmButton_Click"/>
            
            

        </StackPanel>


        <Label x:Name="NumberDisplayLabel"
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Margin="20"/>
    </Grid>
</Window>
